{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2015",             // webpack will pass this through babel, gulp tasks will override it
        "module": "commonjs",
        "experimentalDecorators": true,
        "noImplicitUseStrict": true,
        "typeRoots": [ "./types", "./node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "*": ["./types/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}